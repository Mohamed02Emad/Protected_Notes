<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.protectednotes">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProtectedNotes"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4031659564383807~4229681908ca-app-pub-xxxx"/>


        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.ProtectedNotes.NoActionBar"/>
        <activity
            android:name=".The_Note"
            android:exported="false"
            android:label="@string/protec"/>
        <activity android:name=".login"
                  android:exported="false"
            android:label="@string/protec"
            />
        <activity
            android:name=".ui.home.SplashScreen"
            android:exported="true"
            android:label="@string/protec"
            android:theme="@style/Splash_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>