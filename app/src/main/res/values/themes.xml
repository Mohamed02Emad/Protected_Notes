<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProtectedNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DAD2B727</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#F0FFD700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#7DFADB35</item>
        <!-- Customize your theme here. -->
        <item name="textTheme">#000000</item>
        <item name="golden1">@color/Golden_Theme</item>
        <item name="golden2">#918335</item>
        <item name="golden3">#6A5E1B</item>
        <item name="line">#A2D0A12A</item>
        <item name="trackkk">@color/Golden_Theme</item>
        <item name="android:navigationBarColor">#978526</item>


        <item name="colorOnSurface">?attr/textTheme</item>
        <item name="colorSecondary">#018744</item>
    </style>

    <style name="Splash_Screen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor" tools:targetApi="l">#7DFADB35</item>
    </style>

        <style name="Theme.ProtectedNotes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProtectedNotes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProtectedNotes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>